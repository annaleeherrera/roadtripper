<h1><%= @trip.name %></h1>

<%= link_to "✐", edit_trip_path(@trip.id) %>
<%=link_to "☒", trip_path(@trip.id), method: :delete, data: {confirm: "Confirm Deletion"} %>

<% if !@trip.description.empty? %>
  <p>Description: <%= @trip.description %></p>
<% end %>

<h3>Destinations:</h3>
<table>
  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= link_to stop.name, trip_stop_path(@trip.id, stop.id) %></td>
        <td><%= link_to "✏︎", edit_trip_stop_path(@trip.id, stop.id) %></td>
        <td><%=link_to "☒", trip_stop_path(@trip.id, stop.id), method: :delete, data: {confirm: "Confirm Deletion"} %></td>
      </tr>
    <% end %>
    <% if @stops.count == 0 %>
      <tr>
        <td>There are currently no destinations.</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "+ Add A Destination", new_trip_stop_path(@trip.id) %>
